<html>
<head>
{{> WEB-INF/views/common_header_tags.mustache}}
</head>
<body>
{{> WEB-INF/views/header.mustache}}
{{> WEB-INF/views/link_navigator.mustache}}
<div id="display_div">
	
	<div id="main_div">
		{{#bestPractice}}
		<div id="bestPractice_detail">
			<table width="100%">
				<tr>
					<td width="90%">{{topic}}</td>
					<td width="5%">
						<a href="#"><img src="{{base_path}}/resources/images/2.png" title="Edit topic" height="20" width="20"/></a>
					</td>
					<td width="5%">
						<a href="#"><img src="{{base_path}}/resources/images/3.png" title="Delete topic" height="20" width="20"/></a>
					</td>
				</tr>
				<tr><td colspan="3"><hr color="#E5E4E2"></td></tr>
				<tr><td colspan="3"><div id="bestPractice_detailedDescription">{{solutionString}}</div></td></tr>
			</table>
		</div>
		{{/bestPractice}}
	</div>
	{{> WEB-INF/views/most_viewed.mustache}}
</div>
