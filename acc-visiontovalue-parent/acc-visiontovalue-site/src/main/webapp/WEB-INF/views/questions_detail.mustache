<!DOCTYPE html>
<html>
<head>
{{> WEB-INF/views/common_header_tags.mustache}}
</head>
<body>
{{> WEB-INF/views/header.mustache}}
{{> WEB-INF/views/link_navigator.mustache}}
<div id="display_div">
	
	<div id="main_div">
		
		{{#question}}
		
		<form action="{{base_path}}/{{community}}/questions/detail/{{questionId}}" method="post" accept-charset="UTF-8">
		
		<div id="question_detail_header">
		
		<table width="100%">
			<tr>
				<td width="90%">{{questionString}}</td>
				<td width="5%">
					<a href="#"><img src="{{base_path}}/resources/images/2.png" title="Edit topic" height="20" width="20"/></a>
				</td>
				<td width="5%">
					<a href="#"><img src="{{base_path}}/resources/images/3.png" title="Delete topic" height="20" width="20"/></a>
				</td>
			</tr>
		</table>
		</div>
	
		<hr color="#E5E4E2">
	
		<div id="detailedDescription">{{detailedDescription}}</div>
	
		<div id="recommendedSolution">{{recommendedSolution}}</div>
	
		<div id="answers_div">
			<table class="answer_table">
				{{#answerList}}
					<tr>
						<td width="90%">
							{{answerString}}
						</td>
						<td width="5%">
							<a href="#"><img src="{{base_path}}/resources/images/2.png" title="Edit topic" height="20" width="20"/></a>
						</td>
						<td width="5%">
							<a href="#"><img src="{{base_path}}/resources/images/3.png" title="Delete topic" height="20" width="20"/></a>
						</td>
					</tr>
					<tr>
						<td colspan="3" align="right">
							<font size="2" color="#B6B6B4">
								<i>modified 10 mins ago <img src="{{base_path}}/resources/images/5.png" height="20" width="15"/> <b>Username</b></i>
							</font>
						</td>
					</tr>
					<tr>	
						<td><hr color="#E5E4E2"></td>
					</tr>
				{{/answerList}}
			</table>
		</div>
		<div id="answer_box">
			
				<input type="hidden" id="questionId" name="questionId" {{#form.questionId}}value="{{form.questionId}}"{{/form.questionId}} />
				<input type="textarea" placeholder="Post your answer" name="answerArea" {{#form.textArea}}value="{{form.textArea}}"{{/form.textArea}}/>
				<div id="answers_button_div">
					<input type="submit" name="submit" value="Post Answer"/>
				</div>
		</div>
		</form>
		{{/question}}
		
	</div>
	
	<div id="view_div">
	</div>
	
</div>
</body>
</html>