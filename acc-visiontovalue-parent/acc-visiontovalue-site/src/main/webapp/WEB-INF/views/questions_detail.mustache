<!DOCTYPE html>
<html>
<head>
{{> WEB-INF/views/common_header_tags.mustache}}
<script type="text/javascript">
	
	function saveAnswer(){
		
		var doc = new jsPDF();
		{{#question}}
			doc.text(20, 10, "{{questionString}}" );
			doc.text(20, 20, "{{detailedDescription}}" );
			doc.text(20, 30, "{{community}}" );
			doc.text(20, 40, "{{category}}" );
			doc.text(20, 50, "{{lastModifiedDate}}" );
			var j =60;		
			{{#answerList}}
				doc.text(20, j, "{{answerString}}" );
				doc.text(20, j+10, "{{date}}" );
				j=j+20;				
			{{/answerList}}
					
			doc.save('{{questionId}}.pdf');
		{{/question}}
	}

</script>
</head>
<body>
{{> WEB-INF/views/header.mustache}}
{{> WEB-INF/views/link_navigator.mustache}}
<div id="display_div">
	
	<div id="main_div">
		{{#question}}
		<div id="question_detail_header">
		
		<table width="100%">
			<tr>
				<td width="90%">{{questionString}}</td>
				<td width="5%">
					<a href="#"><img src="{{base_path}}/resources/images/2.png" title="Edit topic" height="20" width="20"/></a>
				</td>
				<td width="5%">
					<a href="#"><img src="{{base_path}}/resources/images/3.png" title="Delete topic" height="20" width="20"/></a>
				</td>
			</tr>
		</table>
		</div>
	
		<hr color="#E5E4E2">
	
		<div id="detailedDescription">{{detailedDescription}}</div>
	
		<div id="recommendedSolution">{{recommendedSolution}}</div>
	
		<div id="answers_div">
			<table class="answer_table">
				{{#answerList}}
					<tr>
						<td width="90%">
							{{answerString}}
						</td>
						<td width="5%">
							<a href="#"><img src="{{base_path}}/resources/images/2.png" title="Edit topic" height="20" width="20"/></a>
						</td>
						<td width="5%">
							<a href="#"><img src="{{base_path}}/resources/images/3.png" title="Delete topic" height="20" width="20"/></a>
						</td>
					</tr>
					<tr>
						<td colspan="3" align="right">
							<font size="2" color="#B6B6B4">
								<i>modified 10 mins ago <img src="{{base_path}}/resources/images/5.png" height="20" width="15"/> <b>Username</b></i>
							</font>
						</td>
					</tr>
					<tr>	
						<td><hr color="#E5E4E2"></td>
					</tr>
				{{/answerList}}
			</table>
		</div>
		{{/question}}
		<div id="answer_box">
			<textarea placeholder="Post your answer"></textarea>
			<div id="answers_button_div">
				<button class="post_button" id="submitAnswer" >Post answer</button>
			</div>
		</div>
	</div>
	
	<div id="view_div">
	</div>
	
</div>
</body>
</html>